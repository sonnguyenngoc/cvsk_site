<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><a href="<%= menu_contents_path %>" class="btn-back"><i class="icon-arrow-left52 position-left"></i></a> <span class="text-semibold">Menu Content</span> - Management</h4>
        </div>
    </div>

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="<%= mains_path %>"><i class="icon-home2 position-left"></i> Home</a></li>
            <li><a href="<%= menu_contents_path %>">Manage</a></li>
            <li><a href="<%= menu_contents_path %>">Menu Content</a></li>
            <li class="active"><%= @menu_content.title %></li>
        </ul>
    </div>
</div>
<!-- /page header -->

<!-- Content area -->
<div class="content">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title"><span class="text-semibold"><%= @menu_content.title %></span></h5>
            
            <%= content_tag(:p, class: "color-red") do %>
              <%= notice %>
            <% end %>
        
            <form class="form-horizontal" role="form">
				
                <div class="form-group">
                    <%= label "", "Title: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static text-justify") do %>
                          <%= @menu_content.title %>
                        <% end %>
                    </div>
                </div>
					
                <div class="form-group">
                    <%= label "", "Content: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static text-justify") do %>
                          <%= (@menu_content.content).html_safe %>
                        <% end %>
                    </div>
                </div>
					
                <div class="form-group">
                    <%= label "", "Menu of the day: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                      <% @menu_content.listing_menu_products.each do |item| %>
                        <%= content_tag(:p, class: "form-control-static text-teal") do %>
                          <%= item.product.name %>
                        <% end %>
                      <% end %>
                    </div>
                </div>
					
                <div class="form-group">
                    <%= label "", "Created At: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
                        <%= content_tag(:p, class: "form-control-static") do %>
                          <%= @menu_content.created_at.strftime("%d/%m/%Y") %>
                        <% end %>
                    </div>
                </div>
            </form>
        
            <%= link_to '<i class="icon-backward2 position-left"></i> Back'.html_safe, menu_contents_path, class: "btn btn-primary" %>
            
        </div>
    </div>

    <!-- Footer -->
	<div class="footer text-muted">
		Copyright &copy; 2015 - Nhà hàng Chay vì sức khỏe.
	</div>
	<!-- /footer -->

</div>
<!-- /content area -->

<!-- Theme JS files -->
<%= javascript_include_tag '/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/assets/js/core/app.js' %>
<!-- /theme JS files -->