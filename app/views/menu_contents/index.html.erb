<!-- Page header -->
<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><a href="<%= mains_path %>" class="btn-back"><i class="icon-arrow-left52 position-left"></i></a> <span class="text-semibold">Posts</span> - Management</h4>
        </div>
    </div>

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="<%= mains_path %>"><i class="icon-home2 position-left"></i> Home</a></li>
            <li><a href="<%= menu_contents_path %>">Manage</a></li>
            <li class="active">Menu Content</li>
        </ul>
    </div>
</div>
<!-- /page header -->

<!-- Content area -->
<div class="content">

    <!-- Basic datatable -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <%= link_to 'New Menu Content', new_menu_content_path, class: 'btn btn-primary' %>
            <hr/>
            <h5 class="panel-title">Listing <span class="text-semibold">Menu Content</span></h5>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="reload"></a></li>
                    <li><a data-action="close"></a></li>
                </ul>
            </div>
        </div>
        
        <table class="table datatable-menu-content">
            <thead>
                <tr>
					<th>Title</th>
                    <th>Menu of the day</th>
                    <th>Created At</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @menu_contents.each do |f| %>
                    <tr>
                        <td><%= link_to (f.title), f %></td>
						<td>
							<% f.listing_menu_products.each do |ff| %>
								<p class="text-teal"><%= ff.product.name %></p>
							<% end %>
						</td>
                        <td><%= f.created_at.strftime("%d/%m/%Y") %></td>
                        <td class="text-center">
                            <ul class="icons-list">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-menu9"></i>
                                    </a>
    
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li>
                                            <%= link_to '<i class="glyphicon glyphicon-edit"></i> Edit'.html_safe, edit_menu_content_path(f) %>
                                        </li>
                                        <li>
                                            <%= link_to '<i class="icon-cross2"></i> Destroy'.html_safe, f, method: :delete, data: {confirm: 'Are you sure?'} %>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <!-- /basic datatable -->

    <!-- Footer -->
	<div class="footer text-muted">
		Copyright &copy; 2015 - Nhà hàng Chay vì sức khỏe.
	</div>
	<!-- /footer -->

</div>
<!-- /content area -->

<!-- Theme JS files -->
<%= javascript_include_tag '/assets/js/plugins/forms/styling/uniform.min.js' %>
<%= javascript_include_tag '/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/assets/js/core/app.js' %>
<%= javascript_include_tag '/javascripts/datatables_menu_content.js' %>
<!-- /theme JS files -->