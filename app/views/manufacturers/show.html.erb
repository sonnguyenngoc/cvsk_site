<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><a href="<%= manufacturers_path %>" class="btn-back"><i class="icon-arrow-left52 position-left"></i></a> <span class="text-semibold">Manufacturers</span> - Management</h4>
        </div>
    </div>

    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="<%= mains_path %>"><i class="icon-home2 position-left"></i> Home</a></li>
            <li><a href="<%= manufacturers_path %>">Storage</a></li>
            <li><a href="<%= manufacturers_path %>">Manufacturers</a></li>
            <li class="active"><%= @manufacturer.name %></li>
        </ul>
    </div>
</div>
<!-- /page header -->

<!-- Content area -->
<div class="content">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title"><span class="text-semibold"><%= @manufacturer.name %></span></h5>
            
            <%= content_tag(:p, class: "color-red") do %>
              <%= notice %>
            <% end %>
        
            <form class="form-horizontal" role="form">
                <div class="form-group">
					<%= label "", "Picture/Logo: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
						<%= image_tag(@manufacturer.image_url, size: "250x150", alt: "Picture/logo's Manufacturer", class: "img-rouded") %>
                    </div>
                </div>
                <div class="form-group">
					<%= label "", "Name: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
						<%= content_tag(:p, class: "form-control-static") do %>
                          <%= @manufacturer.name %>
                        <% end %>
                    </div>
                </div>
                <div class="form-group">
					<%= label "", "Address: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
						<%= content_tag(:p, class: "form-control-static ") do %>
                          <%= @manufacturer.address %>
                        <% end %>
                    </div>
                </div>
                <div class="form-group">
					<%= label "", "Phone: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
						<%= content_tag(:p, class: "form-control-static ") do %>
                          <%= @manufacturer.phone %>
                        <% end %>
                    </div>
                </div>
                <div class="form-group">
					<%= label "", "Email: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
						<%= content_tag(:p, class: "form-control-static ") do %>
                          <%= @manufacturer.email %>
                        <% end %>
                    </div>
                </div>
                <div class="form-group">
					<%= label "", "Introduction: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
						<%= content_tag(:p, class: "form-control-static text-justify") do %>
                         <%= (@manufacturer.intro).html_safe %>
                        <% end %>
                    </div>
                </div>
                <div class="form-group">
					<%= label "", "Created At: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
						<%= content_tag(:p, class: "form-control-static ") do %>
                          <%= @manufacturer.created_at.strftime("%d/%m/%Y") %>
                        <% end %>
                    </div>
                </div>
					
				<div class="form-group">
					<%= label "", "Related Images: ", class: "control-label col-sm-2 text-semibold" %>
                    <div class="col-sm-10">
						<% @listing_images.each do |item| %>
							<div class="col-sm-4">
								<%= image_tag(item.listing_image_url, size: "250x150", alt: "Picture/logo's Manufacturer", class: "img-rouded padding-bottom") %>
							</div>
						<% end %>
                    </div>
                </div>
            </form>
        
            <%= link_to '<i class="icon-backward2 position-left"></i> Back'.html_safe, manufacturers_path, class: "btn btn-primary" %>
            
        </div>
    </div>

    <!-- Footer -->
	<div class="footer text-muted">
		Copyright &copy; 2015 - Nhà hàng Chay vì sức khỏe.
	</div>
	<!-- /footer -->

</div>
<!-- /content area -->

<!-- Theme JS files -->
<%= javascript_include_tag '/assets/js/plugins/tables/datatables/datatables.min.js' %>
<%= javascript_include_tag '/assets/js/plugins/forms/selects/select2.min.js' %>

<%= javascript_include_tag '/assets/js/core/app.js' %>
<!-- /theme JS files -->