<div id="teaser">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>NHÀ HÀNG</h1>
                <div class="tl-breadcrumb-wrapper hidden-xs">
                    <ul class="tl-breadcrumb">
                        <li>
                            <a href="<%= root_path %>">
                                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                            </a>
                        </li>
                        <li>
                            <%= @manufacturers.name %>
                        </li>
                    </ul>
                </div>
                <!-- .tl-breadcrumb -->

                <div class="social-bookmarking-wrapper">
                    <ul class="social-bookmarking">
                        <li>
                            <a class="fb hvr-float-shadow" href="http://facebook.com"></a>
                        </li>
                        <li>
                            <a class="yt hvr-float-shadow" href="http://youtube.com"></a>
                        </li>
                        <li>
                            <a class="gp hvr-float-shadow" href="http://googleplus.com"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- .row -->
    </div>
</div>
<!-- #teaser -->

<div id="main-container">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-9 col-md-push-3" role="main">
                <div class="page-content devider">
                    <article>
                        <h2 class="title"><strong>NHÀ HÀNG: </strong><%= @manufacturers.name %></h2>
                        <hr/>
                        <section class="post-entry">
                            <span class="text-justify"><%= (@manufacturers.intro).html_safe %></span>
                        </section>
                        <!-- .entry-content -->
                        <div class="dashed" />
                    </article>
                </div>
                
                <div class="tl-carousel-wrapper">
                    <h2 class="title">Món ăn của nhà hàng</h2>
                    <div class="tl-carousel-inner-wrapper">
                        
                        <ul class="tl-carousel">
                            <% @listing_product.each do |item| %>
                                <% if item.manufacturer_id == @manufacturers.id %>
                                    <li>
                                        <span class="meta font-small"><%= link_to item.name, product_detail_homes_path(:id => item) %></span>
                                        <div class="image image-slideshow-small">
                                            <img src="<%= item.image_url if item.image_url? %>" class="tl-frame-light" alt="<%= item.name %>" />
                                        </div>
                                        <p class="excerpt"><%= truncate(strip_tags(item.description), length: 100) %></p>
                                        <%= link_to "Xem tiếp", product_detail_homes_path(:id => item), class: "read-more-red font-medium" %>
                                    </li>
                                <% end %>
                            <% end %>
                        </ul>
                        <div class="c-pagination visible-xs"></div>
                    </div>
                    <!-- #tl-corausel-inner-wrapper -->

                    <div class="tl-carousel-nav hidden-xs">
                        <span class="c-previous"></span>
                        <span class="c-next"></span>
                    </div>
                </div>
                <!-- #tl-corausel-wrapper -->
            </div>

            <aside class="col-xs-12 col-sm-12 col-md-3 col-md-pull-9">
                <div class="widget widget-menu-highlights">
                    <h3 class="widget-title">LOGO NHÀ HÀNG</h3>
                    <a href="/assets/frontend/showcase/550x250.png" rel="prettyPhoto">
                  <img src="<%= @manufacturers.image_url if @manufacturers.image_url? %>" width="250" alt="150">
                </a>
                </div>
                <!-- .widget-menu-highlights -->

                <!-- Widget Recent posts -->
                <div class="widget widget_recent_entries">
                    <h3 class="widget-title">THÔNG TIN</h3>
                    <ul>
                        <li><strong>Địa chỉ:</strong>
                            <%= @manufacturers.address %>
                        </li>
                        <li><strong>Email:</strong>
                            <%= @manufacturers.email %>
                        </li>
                        <li><strong>Số điện thoại:</strong>
                            <%= @manufacturers.phone %>
                        </li>
                    </ul>
                </div>
                <!-- widget_recent_entries -->

                <div class="widget widget-menu-highlights">
                    <h3 class="widget-title">HÌNH ẢNH</h3>
                    <div class="hvr-float-shadow line-bottom">
                        <a href="/assets/frontend/showcase/140x140.png" rel="prettyPhoto"><img src="/assets/frontend/showcase/56x56.png" width="56" height="56" alt=""></a>
                    </div>
                    <div class="hvr-float-shadow line-bottom">
                        <a href="/assets/frontend/showcase/140x140.png" rel="prettyPhoto"><img src="/assets/frontend/showcase/56x56.png" width="56" height="56" alt=""></a>
                    </div>
                    <div class="hvr-float-shadow line-bottom">
                        <a href="/assets/frontend/showcase/140x140.png" rel="prettyPhoto"><img src="/assets/frontend/showcase/56x56.png" width="56" height="56" alt=""></a>
                    </div>
                    <div class="hvr-float-shadow line-bottom">
                        <a href="/assets/frontend/showcase/140x140.png" rel="prettyPhoto"><img src="/assets/frontend/showcase/56x56.png" width="56" height="56" alt=""></a>
                    </div>
                    <div class="hvr-float-shadow line-bottom">
                        <a href="/assets/frontend/showcase/140x140.png" rel="prettyPhoto"><img src="/assets/frontend/showcase/56x56.png" width="56" height="56" alt=""></a>
                    </div>
                    <div class="hvr-float-shadow line-bottom">
                        <a href="/assets/frontend/showcase/140x140.png" rel="prettyPhoto"><img src="/assets/frontend/showcase/56x56.png" width="56" height="56" alt=""></a>
                    </div>
                    <div class="hvr-float-shadow line-bottom">
                        <a href="/assets/frontend/showcase/140x140.png" rel="prettyPhoto"><img src="/assets/frontend/showcase/56x56.png" width="56" height="56" alt=""></a>
                    </div>
                    <div class="hvr-float-shadow line-bottom">
                        <a href="/assets/frontend/showcase/140x140.png" rel="prettyPhoto"><img src="/assets/frontend/showcase/56x56.png" width="56" height="56" alt=""></a>
                    </div>
                </div>
                <!-- .widget-menu-highlights -->
            </aside>
        </div>
    </div>

    <div id="prefooter-wrapper">
        <div class="container">
            <div class="row">

                <!-- Widget Container 1 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-chef">
                        <h3 class="font-large">Lời giới thiệu</h3>
                        <% @module_introduction.each do |item| %>
                            <% if item.tag.title == "Lời giới thiệu" %>
                                <div class="image hvr-float-shadow">
                                    <img src="<%= item.image_url if item.image_url? %>" width="82" height="82" alt="" />
                                </div>
                                <div class="text-justify">
                                    <%= item.content.html_safe %>
                                </div>
                                <div class="clearfix"></div>
                                <% end %>
                                    <% end %>
                    </div>
                </div>

                <!-- Widget Container 2 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-menu-highlights">
                        <h3 class="font-large">Món ăn mới</h3>
                        <ul>
                            <% @module_new_products.each do |item| %>
                                <li>
                                    <div class="image hvr-float-shadow"><img src="<%= item.image_url if item.image_url? %>" width="56" height="56" alt="<%= item.name %>"></div>
                                    <h4 class="title"><a href="" title=""><%= link_to (truncate(strip_tags(item.name), length: 20)), product_detail_homes_path(id: item) %></a></h4>
                                    <div class="excerpt">
                                        <p>
                                            <%= truncate(strip_tags(item.description), length: 100) %>
                                        </p>
                                    </div>
                                    <div class="clearfix"></div>
                                </li>
                                <% end %>
                        </ul>
                        <%= link_to "Xem tiếp", menu_product_homes_path, class: "read-more-red font-medium" %>
                            <div class="clearfix"></div>
                    </div>
                </div>

                <!-- Widget Container 3 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-contact-us">
                        <h3 class="font-large">Đăng ký nhận tin mới</h3>
                        <form name="contact-us" method="post" class="contact-us-form">
                            <ul>
                                <li>
                                    <input class="form-control float-label" placeholder="Nhập email của bạn" type="text" name="email" title="Please enter your email address" />
                                </li>
                                <li><a href="#" role="button" class="tl-button dark submit font-medium">Đăng ký</a></li>
                            </ul>
                            <input type="hidden" name="handler" value="contact" />
                        </form>
                        <div class="clearfix"></div>
                    </div>
                </div>

            </div>
            <!-- .row -->
        </div>
        <!-- .container -->
    </div>
    <!-- #prefooter-wrapper -->
</div>
