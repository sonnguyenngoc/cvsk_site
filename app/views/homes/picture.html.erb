<div id="teaser">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>HÌNH ẢNH</h1>
                <div class="tl-breadcrumb-wrapper hidden-xs">
                    <ul class="tl-breadcrumb">
                        <li>
                            <a href="<%= root_path %>">
                                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                            </a>
                        </li>
                        <li>HÌNH ẢNH</li>
                    </ul>
                </div>
                <!-- .tl-breadcrumb -->

                <%= render "link_page" %>
            </div>
        </div>
        <!-- .row -->
    </div>
</div>
<!-- #teaser -->

<div id="main-container">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12" role="main">
                <div class="page-content">
                    <div class="gallery-list list-cols">
                        <div class="row">
                          <% @module_pictures.each do |item| %>
                              <article class="col-sm-3 col-xs-12">
                                  <h3 class="title title-margin"><%= link_to item.title, picture_detail_homes_path(id: item) %></h3>
                                  <div class="image">
                                      <img src="<%= item.image_url.news if item.image_url? %>" width="255" height="130" alt="<%= item.title %>">
                                  </div>
                                  <%= link_to "Xem thêm", post_detail_homes_path(:id => item), class: "read-more-red font-medium", title: "Read more" %>
                              </article>
                              <!-- .post -->
                          <% end %>   
                        </div>
                        <!-- .row -->
                    </div>
                    <!-- list-cols -->
                    
                    <div class="digg_pagination">
                        <%= will_paginate @module_pictures, :container => false %>
                    </div>
                    
                </div>
                <!-- .page-content -->
            </div>
        </div>
    </div>

    <div id="prefooter-wrapper">
        <div class="container">
            <div class="row">
    
                <!-- Widget Container 1 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-chef">
                        <h3 class="font-large">Lời giới thiệu</h3>
                        <% @module_introduction.each do |item| %>
                            <% if item.tag.title == "Lời giới thiệu" %>
                                <div class="image hvr-float-shadow">
                                    <img src="<%= item.image_url if item.image_url? %>" width="82" height="82" alt="" />
                                </div>
                                <div class="text-justify"><%= item.content.html_safe %></div>
                                <div class="clearfix"></div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
    
                <!-- Widget Container 2 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-menu-highlights">
                        <h3 class="font-large">Món ăn mới</h3>
                        <ul>
                            <% @module_new_products.each do |item| %>
                                <li>
                                    <div class="image hvr-float-shadow"><img src="<%= item.image_url if item.image_url? %>" width="56" height="56" alt="<%= item.name %>"></div>
                                    <h4 class="title"><a href="" title=""><%= link_to (truncate(strip_tags(item.name), length: 20)), product_detail_homes_path(id: item) %></a></h4>
                                    <div class="excerpt">
                                        <p><%= truncate(strip_tags(item.description), length: 100) %></p>
                                    </div>
                                    <div class="clearfix"></div>
                                </li>
                            <% end %>
                        </ul>
                        <%= link_to "Xem tiếp", menu_product_homes_path, class: "read-more-red font-medium" %>
                        <div class="clearfix"></div>
                    </div>
                </div>
    
                <!-- Widget Container 3 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-contact-us">
                        <h3 class="font-large">Đăng ký nhận tin mới</h3>
                        <%= render 'newsletter' %>
                        <div class="clearfix"></div>
                    </div>
                </div>
    
            </div>
            <!-- .row -->
        </div>
        <!-- .container -->
    </div>
    <!-- #prefooter-wrapper -->
</div>
<!-- #main-container -->
