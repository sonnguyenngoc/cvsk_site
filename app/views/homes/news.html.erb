<!-- #teaser -->

<div id="main-container">
    <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12" role="main">
              <div class="page-content">
                  <div class="post-list list-cols">
                      <div class="row">
                        <% @module_news_posts.each do |item| %>
                            <article class="post col-sm-4 col-xs-12">
                                <h3 class="title"><%= link_to item.title, post_detail_homes_path(:id => item) %></h3>
                                <section class="meta font-roboto">
                                    <span>Ngày tạo:<a class="date" title="Date" href="#"><%= item.created_at.strftime("%d/%m/%Y") %></a></span>
                                    <span class="categories">Nhãn:<a class="category" title="Category1" href="#"><%= item.tag.title %></a></span>
                                </section>
                                <div class="image image-post">
                                    <a href="<%= item.image_url %>" rel="prettyPhoto"><img src="<%= item.image_url if item.image_url? %>" style="width: 360px; height: 150px;" alt="<%= item.title %>"></a>
                                </div>
                                <section class="post-entry excerpt">
                                    <%= content_tag(:p, class: "text-justify") do %>
                                        <%= truncate(strip_tags(item.content), length: 150) %>
                                    <% end %>
                                </section><!-- .entry-content -->
                                <%= link_to "Xem thêm", post_detail_homes_path(:id => item), class: "read-more-red font-medium", title: "Read more" %>
                            </article><!-- .post -->
                        <% end %>
                      </div>
                  </div><!-- .post-list -->
                  
                 

                  <div class="pagination">
                      <div class="dashed clearfix"></div>
                      <ul>
                          <li><a href="#" class="previous">Previous</a></li>
                          <li><a href="#" class="current">1</a></li>
                          <li><a href="#">2</a></li>
                          <li><a href="#">3</a></li>
                          <li><a href="#">4</a></li>
                          <li><a href="#">5</a></li>
                          <li><a href="#" class="next">Next</a></li>
                      </ul>
                  </div>

              </div><!-- .page-content -->
          </div>
        </div><!-- .container -->
    </div><!-- #main-container -->

    <div id="prefooter-wrapper">
        <div class="container">
            <div class="row">
    
                <!-- Widget Container 1 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-chef">
                        <h3 class="font-large">Lời giới thiệu</h3>
                        <% @module_introduction.each do |item| %>
                            <% if item.tag.title == "Lời giới thiệu" %>
                                <div class="image hvr-float-shadow">
                                    <img src="<%= item.image_url if item.image_url? %>" width="82" height="82" alt="" />
                                </div>
                                <div class="text-justify"><%= item.content.html_safe %></div>
                                <div class="clearfix"></div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
    
                <!-- Widget Container 2 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-menu-highlights">
                        <h3 class="font-large">Món ăn mới</h3>
                        <ul>
                            <% @module_new_products.each do |item| %>
                                <li>
                                    <div class="image hvr-float-shadow"><img src="<%= item.image_url if item.image_url? %>" width="56" height="56" alt="<%= item.name %>"></div>
                                    <h4 class="title"><a href="" title=""><%= link_to (truncate(strip_tags(item.name), length: 20)), product_detail_homes_path(id: item) %></a></h4>
                                    <div class="excerpt">
                                        <p><%= truncate(strip_tags(item.description), length: 100) %></p>
                                    </div>
                                    <div class="clearfix"></div>
                                </li>
                            <% end %>
                        </ul>
                        <%= link_to "Xem tiếp", menu_product_homes_path, class: "read-more-red font-medium" %>
                        <div class="clearfix"></div>
                    </div>
                </div>
    
                <!-- Widget Container 3 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-contact-us">
                        <h3 class="font-large">Đăng ký nhận tin mới</h3>
                        <form name="contact-us" method="post" class="contact-us-form">
                            <ul>
                                <li>
                                    <input class="form-control float-label" placeholder="Nhập email của bạn" type="text" name="email" title="Please enter your email address" />
                                </li>
                                <li><a href="#" role="button" class="tl-button dark submit font-medium">Đăng ký</a></li>
                            </ul>
                            <input type="hidden" name="handler" value="contact" />
                        </form>
                        <div class="clearfix"></div>
                    </div>
                </div>
    
            </div>
            <!-- .row -->
        </div>
        <!-- .container -->
    </div>
    <!-- #prefooter-wrapper -->
</div>
<!-- #main-container -->

