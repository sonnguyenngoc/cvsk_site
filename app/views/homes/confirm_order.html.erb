<div id="teaser">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>ĐẶT HÀNG/GIAO HÀNG</h1>
                <div class="tl-breadcrumb-wrapper hidden-xs">
                    <ul class="tl-breadcrumb">
                        <li>
                            <a href="<%= root_path %>">
                                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                            </a>
                        </li>
                        <li>ĐẶT HÀNG/GIAO HÀNG</li>
                    </ul>
                </div>
                <!-- .tl-breadcrumb -->

                <div class="social-bookmarking-wrapper">
                    <ul class="social-bookmarking">
                        <li>
                            <a class="fb hvr-float-shadow" href="http://facebook.com"></a>
                        </li>
                        <li>
                            <a class="yt hvr-float-shadow" href="http://youtube.com"></a>
                        </li>
                        <li>
                            <a class="gp hvr-float-shadow" href="http://googleplus.com"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- .row -->
    </div>
</div>
<!-- #teaser -->

<div id="main-container">
    <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-8" role="main">
              <div class="page-content devider">

                  <article class="post">
                    <%= form_for @order, html: {class: "reservation-form"} do |f| %>
                          <ul>
                              <li><%= f.text_field :many_people, placeholder: "Số người đặt", class: "form-control float-label width50" %></li>
                              <li>
                                <div class="form-group width50">
                                    <div class='input-group date datepicker'>
                                        <input name="date" type='text' class="form-control float-label" required="required" placeholder="NGÀY/GIỜ" />
                                          <span class="input-group-addon">
                                              <span class="glyphicon glyphicon-time"></span>
                                          </span>
                                    </div>
                                </div>
                              </li>
                              <!--<li><input type="text" name="date"  placeholder="DATE/TIME" class="form-control float-label width25 datepicker" required="required" /></li>-->
                              <li><%= f.text_field :customer_name, placeholder: "Tên người đặt", class: "form-control float-label width50" %></li>
                              <li><%= f.text_field :customer_email, placeholder: "Email người đặt", class: "form-control float-label width50" %></li>
                              <li><%= f.text_field :customer_phone, placeholder: "Số điện thoại", class: "form-control float-label width50" %></li>
                              <li><%= f.select(:type, ['Giao hàng', 'Đặt hàng'], {}, { :class => 'select form-control width50' })%></li>
                              <li><%= f.text_area :message, rows: "5", cols: "5", placeholder: "Lời nhắn", class: "form-control float-label" %></li>
                              <li>
                                  <a role="button" href="#" class="tl-button red submit">Xác nhận</a>
                                  <a role="button" href="#" class="tl-button dark reset-form">Reset</a>
                              </li>
                          </ul>
                          <input type="hidden" name="handler" value="book" />
                    <% end %>
                  </article>

              </div>
          </div>
          <aside class="col-xs-12 col-sm-12 col-md-4">
          </aside>
          
        </div>
    </div>

    <div id="prefooter-wrapper">
        <div class="container">
            <div class="row">
    
                <!-- Widget Container 1 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-chef">
                        <h3 class="font-large">Lời giới thiệu</h3>
                        <% @module_introduction.each do |item| %>
                            <% if item.tag.title == "Lời giới thiệu" %>
                                <div class="image hvr-float-shadow">
                                    <img src="<%= item.image_url if item.image_url? %>" width="82" height="82" alt="" />
                                </div>
                                <div class="text-justify"><%= item.content.html_safe %></div>
                                <div class="clearfix"></div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
    
                <!-- Widget Container 2 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-menu-highlights">
                        <h3 class="font-large">Món ăn mới</h3>
                        <ul>
                            <% @module_new_products.each do |item| %>
                                <li>
                                    <div class="image hvr-float-shadow"><img src="<%= item.image_url if item.image_url? %>" width="56" height="56" alt="<%= item.name %>"></div>
                                    <h4 class="title"><a href="" title=""><%= link_to (truncate(strip_tags(item.name), length: 20)), product_detail_homes_path(id: item) %></a></h4>
                                    <div class="excerpt">
                                        <p><%= truncate(strip_tags(item.description), length: 100) %></p>
                                    </div>
                                    <div class="clearfix"></div>
                                </li>
                            <% end %>
                        </ul>
                        <%= link_to "Xem tiếp", menu_product_homes_path, class: "read-more-red font-medium" %>
                        <div class="clearfix"></div>
                    </div>
                </div>
    
                <!-- Widget Container 3 -->
                <div class="col-md-4 col-sm-6">
                    <div class="widget widget-contact-us">
                        <h3 class="font-large">Đăng ký nhận tin mới</h3>
                        <%= render 'newsletter' %>
                        <div class="clearfix"></div>
                    </div>
                </div>
    
            </div>
            <!-- .row -->
        </div>
        <!-- .container -->
    </div>
    <!-- #prefooter-wrapper -->
</div> <!-- #main-container -->

